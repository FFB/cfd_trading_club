    $("#login_b").on("click", "#login-error-box a", function() {
        $("#login-error-box").addClass("hidden");
        $("#login_b form").removeClass("hidden");
    });

	$("#nav-competition").click(function () {
		$("#nav-xpand").show("slow");		
		$("#nav-competition-xpand").toggle(true);
		$("#nav-results-xpand").toggle(false);
		$("#nav-competition").toggleClass("xpanded", true);
		$("#nav-results").toggleClass("xpanded", false);
	});

	$("#nav-results").click(function () {
		$("#nav-xpand").show("slow");
		$("#nav-results-xpand").toggle(true);
		$("#nav-competition-xpand").toggle(false);
		$("#nav-results").toggleClass("xpanded", true);
		$("#nav-competition").toggleClass("xpanded", false);
	});
</script>

